<app version="1">
    <var>
        <int name="v_bat" value="0"/>
        <double name="angle" value="0"/>
        <array name="clock">
            <srting>00</srting>
            <srting>00</srting>
            <srting>00</srting>
        </array>
        <fetch name="music_addr" return-type="string" url="http://localhost:8080/music/mp3"/>
    </var>
    <activity id="main" en="self.id == activity">

        <audio id="music" src="一路向北.mp3"/>

        <img src="头像.jpg" z-index="-1" height="50vh"/>
        <img src="battery-empty.jpg" if="电池.电量条 == 0" left="90vw"/>
        <img src="battery-quarter.jpg" if="电池.电量条 == 1" left="90vw"/>
        <img src="battery-half.jpg" if="电池.电量条 == 2" left="90vw"/>
        <img src="battery-three-quarters.jpg" if="电池.电量条 == 3" left="90vw"/>
        <img src="battery-full.jpg" if="电池.电量条 == 4" left="90vw"/>

        <label top="50vh" font-size="8em" text="时间.月 +'月'+ 时间.日 + '日'" label-align="center"/>
        <label top="70vh" font-size="3rem" text="时间.时 +':'+ 时间.分 +':'+ 时间.秒" label-align="center"/>
        <label top="80vh" font-size="2rem" text="item"
               label-align="center"
               for="item in 一路向北"
               if="music.时 == item.substr(1, 2) &amp;&amp;
               music.分 == item.substr(4, 2) &amp;&amp;
               music.秒 == item.substr(7, 2)"/>

        <event if="keyup.SPACE">
            <log l0="准备进入设置"/>
            <set activity="设置"/>
        </event>
    </activity>

    <activity id="设置" background-color="tomato" if="self.id == activity">

        <event if="keyup.SPACE">
            <log l0="准备进入首页"/>
            <set activity="main"/>
        </event>

        <label padding="10px 20px 10px 20px"
               border-radius="0 0 10px 10px"
               value="设置" label-align="center"
               background-color="#000"
               width="fit-content"
               color="#FFF"
               left="45vw">
        </label>

        <group flex-direction="column" top="50px" id="设置菜单">
            <button for="item in 设置">
                <label text="item.key"/>
                <label text="item.value"/>
            </button>

            <button value="重置绑定"/>
            <button value="重置WIFI"/>
            <button value="系统信息"/>
        </group>

        <flex direction="column" top="50px" id="设置菜单">

            <flex direction="row" for="item in 设置">
                <text value="item.key"></text>
                <text value="item.value"></text>
            </flex>

            <text value="重置绑定"></text>
            <text value="重置WIFI"></text>
            <text value="系统信息"></text>

            <event if="keyup.SPACE">
                <log l0="准备进入设置"/>
                <set activity="设置"/>
            </event>
        </flex>

    </activity>
</app>