<!--全部显示-->
<actypity>

    <!--    <group flex-direction="column" x="" y="" w="" h="">-->
    <!--        <text value="item.value" for="item in 歌词列表"></text>-->
    <!--    </group>-->
    <var >
        <int name="current" value="0"/>
    </var>

    <!--        部分显示，假设只有3个，高亮current-->
    <group flex-direction="column">
        <set current="0"/>
        <text value="歌词列表[current-1].value" if="歌词列表[current-1]==none"/>
        <text value="歌词列表[current-1].value" if="歌词列表[current-1]"/>
        <text value="歌词列表[current-1].value" if="歌词列表[current-1]"/>
        <text value="歌词列表[current-1].value" if="歌词列表[current-1]"/>
        <text value="歌词列表[current].value" if="歌词列表[current]" background-color="tomato">
            <event if="keyup.SPACE">
                <log l0="准备进入设置"/>
                <set activity="设置"/>
            </event>
        </text>
        <text value="歌词列表[current+1].value" if="歌词列表[current+1]"/>
        <text value="歌词列表[current+1].value" if="歌词列表[current+1]"/>
        <text value="歌词列表[current+1].value" if="歌词列表[current+1]"/>
        <text value="歌词列表[current+1].value" if="歌词列表[current+1]"/>
    </group>

    <event if="keyup.SPACE">
        <set current="current+1"/>
    </event>

</actypity>
